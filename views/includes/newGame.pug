block content
        
        div.container
            div.row
                div.col-lg-4.col-centered
                    h1 New Game
                    label The new game's room number
                    input(type="text" id="roomInput" value="temproom" required)
            br
            div.row
                div.col-md-4.col-centered
                    label Select the category of questions
                    br
                    button#addAllCategoriesButton.btn-info Add All Categories 
            div.row
                div.col-md-4.col-md-offset-3
                    select#CatList.catlists(size=10 onChange="moveToMyList()")
                        option(value=-1 )

                div.col-md-4
                    select#myCatList.catlists(size=10 onChange="moveToList()")
                        option(value=-1 )                      
            br
            div.row
                div.col-md-4.col-md-offset-3
                    label How many people want to play?
                    br
                    input(type="text", id="playerInput", placeholder="# of players")
                div.col-md-4
                    label How many games do you want to play?
                    br
                    input(type="text", id="gamesInput", placeholder="# of Games")                          

            br
            div.row
                div.col-md-4.col-md-offset-3
                    button#newGameSubmitButton.btn-info Create Game 
                div.col-md-4
                    button#cancelQuestions.btn-info Cancel
            br
            br
            br
            div.col-lg-4.col-centered
                label#lblError(hidden) YOU MUST CHOOSE AT LEAST FIVE CATEGORIES                                    

   
            
